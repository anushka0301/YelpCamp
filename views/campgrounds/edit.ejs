<%- include ('../partials/header') -%>

<div class="wrap">
    <div class="html">
        <div id="form">
            <h1 id="n">Edit <%= campground.name %></h1>
            <form action="/campgrounds/<%= campground._id %>/?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="camp[name]" value="<%= campground.name %>" >
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="camp[image]" value="<%= campground.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="camp[price]" value="<%= campground.price %>">
                </div>
                <div class="form-group">
                    <textarea class="form-control" name="camp[description]" cols="30" rows="3"><%= campground.description %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn-block" id="add">Submit</button>
                </div>
                <hr>     
            </form>
            <a href="/campgrounds" id="back" style="text-decoration: none; color:rgb(250,250,250,0.7);">Go Back  <i class="fa fa-undo"></i></a>
        </div>
    </div>
</div>

<%- include ('../partials/footer') -%>